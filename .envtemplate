NODE_ENV=development
PORT=
ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:4200
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRATION=15M
JWT_REFRESH_TOKEN_EXPIRATION=30D

DB_USERNAME=
DB_PASSWORD=
DB_NAME=
DB_HOST=
DB_PORT=
# Whether to synchronize the database schema (use with caution in production)
DB_SYNCHRONIZE=true

DEFAULT_USER_ROLE=viewer
PERMISSIONS_AUTO_SYNC=true

# Auto-asignación de permisos con wildcards (JSON format)
# Formato: {"role-slug": ["pattern1", "pattern2"], ...}
# Patrones soportados:
#   - "*" = todos los permisos
#   - "users.*" = todos los permisos de users (users.read, users.create, etc.)
#   - "*.read" = todos los permisos .read de cualquier recurso
#   - "users.read" = permiso específico
# Ejemplo:
AUTO_ASSIGN_PERMISSIONS_RULES={"super-admin":["*"],"admin":["*.read","*.create","*.update"],"editor":["*.read","*.update"],"viewer":["*.read"]}


